@model Gerenciamento_De_Despesas.Models.Entidades.Salario

@{
    ViewData["Title"] = "Edit";
}

<div class="formulario">
    <h5>Atualizar salário do mês de @Model.Mes.Nome</h5>
    <div class="row">
        <div class="col-md-4">
            <form asp-action="Edit" class="form border rounded">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="Id" />
                <div class="form-group">
                    <label asp-for="Valor" class="control-label"></label>
                    <input asp-for="Valor" class="form-control" />
                    <span asp-validation-for="Valor" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="MesId" class="control-label"></label>
                    <select asp-for="MesId" class="form-control" asp-items="ViewBag.MesId"></select>
                    <span asp-validation-for="MesId" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input type="submit" value="Salvar" class="btn btn-outline-success btn-sm" />
                    <a asp-action="Index" class="btn btn-outline-dark btn-sm">Voltar</a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
